<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BuildController" spacing="10" prefWidth="500">
	<stylesheets>
		<URL value="@computerbuilder.css" />
	</stylesheets>
	<TableView fx:id="buildTv" items="${controller.build.parts}" prefWidth="485">
		<placeholder>
			<Label text="No parts in the current build."/>
		</placeholder>
		<columns>
			<TableColumn text="Type">
				<cellValueFactory><PropertyValueFactory property="type"/></cellValueFactory>
			</TableColumn>
			<TableColumn text="Name">
				<cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
			</TableColumn>
			<TableColumn text="Price">
				<cellValueFactory><PropertyValueFactory property="price"/></cellValueFactory>
			</TableColumn>
		</columns>
	</TableView>
	<HBox alignment="TOP_RIGHT">
		<Text  text="Total: $$$$"/>
	</HBox>
	<Button styleClass="button" text="Check Build" />
	<Button styleClass="button" text="Remove Selected from Build" onAction="#handleDeleteBuild"/>
	<Button styleClass="button" text="Close" onAction="#handleCloseWindow"/>
</VBox>